<Window x:Class="YZKGame.NET.WindowInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="120" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="txtValue" HorizontalAlignment="Left" Height="23" Margin="10,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="272" KeyDown="txtValue_KeyDown"/>
        <TextBlock x:Name="txtMsg" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="272" Text="___"/>
        <Button x:Name="btnOK" Content="确定" HorizontalAlignment="Left" Margin="124,62,0,0" VerticalAlignment="Top" Width="75" Click="btnOK_Click"/>
        <Button x:Name="btnCancel" Content="取消" HorizontalAlignment="Left" Margin="207,62,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>

    </Grid>
</Window>
